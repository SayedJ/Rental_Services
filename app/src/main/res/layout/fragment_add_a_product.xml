<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:viewBindingIgnore="true"
    android:background="@color/white"
    tools:context=".AddAProductFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cnslayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="150dp"
        android:background="@drawable/outside_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.157"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/changeImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/radius_button"
            android:shadowColor="@color/colorGrey"
            android:text="Change"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="8sp"

            app:layout_constraintBottom_toTopOf="@+id/productName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.251"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.801" />

        <EditText
            android:id="@+id/productName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="176dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/et_custom"
            android:fontFamily="@font/roboto"
            android:hint="Item name:"
            android:inputType="textPersonName"
            android:padding="15dp"
            android:textColor="@color/colorGrey"
            android:textColorHint="@color/colorGrey"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/AddBrand"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="296dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/et_custom"
            android:fontFamily="@font/roboto"
            android:hint="Brand"
            android:inputType="textPostalAddress"
            android:padding="15dp"
            android:textColor="@color/colorGrey"
            android:textColorHint="@color/colorGrey"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/itemStand"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="356dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/et_custom"
            android:fontFamily="@font/roboto"
            android:hint="Item Stand"
            android:inputType="textPostalAddress"
            android:padding="15dp"
            android:textColor="@color/colorGrey"
            android:textColorHint="@color/colorGrey"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/itemPrice"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="420dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/et_custom"
            android:fontFamily="@font/roboto"
            android:hint="Price - kr/day"
            android:inputType="textPostalAddress"
            android:padding="15dp"
            android:textColor="@color/colorGrey"
            android:textColorHint="@color/colorGrey"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/itemPurchased"
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="420dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/et_custom"
            android:fontFamily="@font/roboto"
            android:hint="Purchased date:"
            android:inputType="datetime"
            android:padding="15dp"
            android:textColor="@color/colorGrey"
            android:textColorHint="@color/colorGrey"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/addModel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="236dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/et_custom"
            android:fontFamily="@font/roboto"
            android:hint="Model"
            android:inputType="textPersonName"
            android:padding="15dp"
            android:textColor="@color/colorGrey"
            android:textColorHint="@color/colorGrey"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/shapeableImageView3"
            android:layout_width="120dp"
            android:layout_height="120dp"

            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintCircleRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.075"

            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            app:strokeColor="@null" />

        <ProgressBar
            android:id="@+id/progressbar_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/shapeableImageView3" />

        <ImageView
            android:id="@+id/uploadUri"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toTopOf="@+id/productName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/shapeableImageView3"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/addNewProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:fontFamily="@font/arizonia"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:text="New Product"
        android:textColor="@color/colorGrey"
        android:textSize="30sp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/cnslayout"
        app:layout_constraintStart_toStartOf="@+id/cnslayout"
        app:layout_constraintTop_toTopOf="@+id/cnslayout"
        app:layout_constraintVertical_bias="0.657" />

    <Button
        android:id="@+id/btn_newProduct"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="135dp"
        android:layout_marginEnd="137dp"
        android:background="@drawable/button_custom"
        android:fontFamily="@font/roboto"
        android:text="Confirm"
        android:textColor="@android:color/white"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/cnslayout"
        app:layout_constraintEnd_toEndOf="@+id/cnslayout"
        app:layout_constraintStart_toStartOf="@+id/cnslayout"
        app:layout_constraintTop_toBottomOf="@+id/cnslayout" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>